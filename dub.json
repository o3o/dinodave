   "authors": [ "Orfeo Da Viá" ],
   "targetPath": "bin",
   "targetType": "library",
   "libs-posix": ["nodave"],
   "sourceFiles-windows-x86-dmd": ["lib/libnodave.lib"],
   "copyFiles": ["lib/libnodave.dll"],
   "configurations": [
      {
         "name": "library",
         "targetType": "library"
